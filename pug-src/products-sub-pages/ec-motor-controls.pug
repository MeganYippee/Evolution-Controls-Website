    .row
        //-1
        .col.product-image
            img.product-photos(src='../src/photos/products-photos/ECM-3PT.JPG' alt='3PT Controller')
        .col.product-description
            h5 EVO/™ECM-3PT (3 Point Floating Control Unit)
            ul
                li Increase/decrease control for EC Motors.
                li Adjustable Rate.
                li 0-10V feedback.
                li Status and Flow Index Lamps.
                li OEM and Contractor Versions.
                li Allows VAV controls to control motor instead of a damper.
            a.btn.btn-secondary.products(href='https://drive.google.com/file/d/16p3pThkZVccCvwLoM-KG5-Yt9wTqhpa-/view' target='_blank')
